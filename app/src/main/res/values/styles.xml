<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextTitle" parent="TextAppearance.AppCompat.Headline" />

    <style name="TextTitle.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRegular" parent="TextAppearance.AppCompat.Body1" />

    <style name="TextLabel" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorTextLabel</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget" parent="@android:style/Widget.Material" />

    <style name="Widget.ActionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/Corners4dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Corners4dp">
        <item name="cornerRadius">4dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>